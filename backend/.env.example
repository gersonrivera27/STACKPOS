# Environment Mode (development | production)
ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/burger_pos

# Google Maps API (restricted by domain in Google Cloud Console)
GOOGLE_MAPS_API_KEY=your_api_key_here

# Application Settings
API_TITLE=Burger POS API
API_VERSION=1.0.0

# CORS - Comma-separated list of allowed origins
# For production add your domain: https://pos.gerson-sec.com
ALLOWED_ORIGINS=http://localhost:5001,http://127.0.0.1:5001

# JWT Configuration - CHANGE THESE IN PRODUCTION!
# Generate secure keys with: openssl rand -hex 32
SECRET_KEY=generate_secure_key_with_openssl_rand_hex_32
JWT_SECRET_KEY=generate_another_secure_key_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
# Token expiration (optional - defaults shown)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# RabbitMQ - CHANGE IN PRODUCTION!
# Must match RABBITMQ_USER and RABBITMQ_PASS in .env.db or root .env
RABBITMQ_URL=amqp://your_rabbitmq_user:your_rabbitmq_password@rabbitmq:5672/

