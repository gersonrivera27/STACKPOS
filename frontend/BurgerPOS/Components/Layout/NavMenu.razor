@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@using BurgerPOS.Services
@inject AuthenticationService AuthService
@inject NavigationManager NavigationManager

<nav class="navbar">
    <div class="navbar-container">
        <a href="/" class="navbar-brand">
             <div class="brand-icon"></div>
             <span>StackPos</span>
        </a>
        
        <button class="navbar-toggle" @onclick="ToggleMenu">
            <i class="bi bi-list navbar-toggle-icon"></i>
        </button>

        <ul class="navbar-menu @(isMenuOpen ? "active" : "")">
            <li>
                <NavLink class="navbar-item" href="/" Match="NavLinkMatch.All">
                    <i class="bi bi-house-door-fill nav-icon"></i>
                    <span>Inicio</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="navbar-item" href="/ordenes">
                    <i class="bi bi-clipboard-data-fill nav-icon"></i>
                    <span>Órdenes</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="navbar-item" href="/cocina">
                    <i class="bi bi-fire nav-icon"></i>
                    <span>Cocina</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="navbar-item" href="/caja">
                    <i class="bi bi-cash-stack nav-icon"></i>
                    <span>Caja</span>
                </NavLink>
            </li>
            <li>
                <NavLink class="navbar-item" href="/tables">
                     <i class="bi bi-grid-3x3-gap-fill nav-icon"></i>
                    <span>Mesas</span>
                </NavLink>
            </li>
            <AuthorizeView Roles="admin">
                <Authorized>
                    <li>
                        <NavLink class="navbar-item" href="/dashboard">
                            <i class="bi bi-bar-chart-fill nav-icon"></i>
                            <span>Dashboard</span>
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
            
            <AuthorizeView Roles="admin">
                <Authorized Context="adminContext">
                     <li>
                        <NavLink class="navbar-item" href="/admin/products" Match="NavLinkMatch.Prefix">
                            <i class="bi bi-gear-fill nav-icon"></i>
                            <span>Admin Productos</span>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="navbar-item" href="/admin/categories" Match="NavLinkMatch.Prefix">
                            <i class="bi bi-tags-fill nav-icon"></i>
                            <span>Admin Categorías</span>
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            @* Mobile-only: user info + logout inside hamburger *@
            <li class="mobile-user-section">
                <AuthorizeView>
                    <Authorized>
                        <div class="mobile-user-info">
                            <i class="bi bi-person-circle"></i>
                            <span>@context.User.Identity?.Name</span>
                            <span class="user-role badge">@context.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</span>
                        </div>
                        <button class="mobile-logout-btn" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                        </button>
                    </Authorized>
                </AuthorizeView>
            </li>
        </ul>
        
        @* Desktop: compact user dropdown *@
        <div class="user-dropdown-wrapper">
            <AuthorizeView>
                <Authorized>
                    <button class="user-dropdown-toggle" @onclick="ToggleUserDropdown" @onclick:stopPropagation="true">
                        <i class="bi bi-person-circle user-avatar"></i>
                        <span class="user-role badge">@context.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</span>
                        <i class="bi bi-chevron-down dropdown-arrow"></i>
                    </button>
                    @if (isUserDropdownOpen)
                    {
                        <div class="user-dropdown-menu">
                            <div class="dropdown-user-detail">
                                <i class="bi bi-person-circle"></i>
                                <span>@context.User.Identity?.Name</span>
                            </div>
                            <hr class="dropdown-divider" />
                            <button class="dropdown-logout-btn" @onclick="Logout">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </button>
                        </div>
                    }
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private bool isMenuOpen = false;
    private bool isUserDropdownOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
        if (isMenuOpen) isUserDropdownOpen = false;
    }

    private void ToggleUserDropdown()
    {
        isUserDropdownOpen = !isUserDropdownOpen;
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}
