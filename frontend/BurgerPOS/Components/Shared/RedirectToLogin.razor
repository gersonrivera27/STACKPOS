@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

@code {
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            await JS.InvokeVoidAsync("console.log", "üö´ RedirectToLogin: El usuario EST√Å autenticado. Redirigiendo a Inicio (Posible condici√≥n de carrera o 403).");
            Navigation.NavigateTo("/");
        }
        else
        {
            var currentPath = new Uri(Navigation.Uri).AbsolutePath;
            if (currentPath != "/login")
            {
                await JS.InvokeVoidAsync("console.log", $"üö´ RedirectToLogin: Usuario NO autenticado. Redirigiendo a /login (Path actual: {currentPath})");
                Navigation.NavigateTo($"/login?ReturnUrl={Uri.EscapeDataString(Navigation.Uri)}");
            }
        }
    }
}
