    <script>
        window.invokeSearchAddressByEircode = async function (eircode, dotnetReference) {
            if (typeof window.searchAddressByEircode === "function") {
                return window.searchAddressByEircode(eircode, dotnetReference);
            }

            const clean = (eircode || "").trim().toUpperCase().replace(/\s+/g, "");

            if (!clean) {
                await dotnetReference.invokeMethodAsync("OnAddressError", "Por favor ingresa un Eircode");
                return;
            }

            try {
                const nominatimUrl =
                    "https://nominatim.openstreetmap.org/search?" +
                    "postalcode=" + encodeURIComponent(clean) +
                    "&country=ie&countrycodes=ie&format=json&addressdetails=1&limit=1";

                const response = await fetch(nominatimUrl, {
                    headers: { "User-Agent": "BurgerPOS/1.0" }
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data && data.length > 0 && data[0].address) {
                        const a = data[0].address;
                        const line = a.road || a.neighbourhood || a.suburb || a.village || "Address";
                        const city = a.town || a.city || a.village || a.county || "Drogheda";
                        const lat = parseFloat(data[0].lat);
                        const lon = parseFloat(data[0].lon);

                        await dotnetReference.invokeMethodAsync("OnAddressFound", line, city, lat, lon);
                        return;
                    }
                }
            } catch {}

            if (clean.startsWith("A92")) {
                await dotnetReference.invokeMethodAsync("OnAddressFound", "Drogheda Area", "Drogheda", 53.7134, -6.3488);
                return;
            }

            await dotnetReference.invokeMethodAsync("OnAddressError",
                "No se encontro la direccion para ese Eircode. Intenta ingresarla manualmente.");
        };
    </script>
    
