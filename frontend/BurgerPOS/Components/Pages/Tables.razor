    .tables-map-area {
        position: relative;
        flex-grow: 1;
        background:
            radial-gradient(circle at 18% 18%, rgba(255,255,255,0.55), transparent 35%),
            linear-gradient(135deg, #eff4f9 0%, #e4eaf1 100%);
        border-radius: 14px;
        overflow: hidden;
        box-shadow: inset 0 0 20px rgba(32, 45, 57, 0.1);
        border: 1px solid #d4dfeb;
    }

    .table-card {
        position: absolute;
        width: var(--table-size, 108px);
        height: var(--table-size, 108px);
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 16px rgba(16, 26, 36, 0.22);
        transition: transform 0.12s ease, box-shadow 0.2s, filter 0.2s;
        color: white;
