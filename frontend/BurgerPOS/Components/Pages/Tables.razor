@page "/tables"
@using BurgerPOS.Models
@using BurgerPOS.Services
@using BurgerPOS.Components.Shared
@inject PosApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="tables-layout" @onmousemove="OnMouseMove" @onmouseup="OnMouseUp">
    <div class="header-status">
        <div class="status-item">
            <div class="box free">FREE</div>
            <span>@tables.Count(t => !t.IsOccupied)</span>
        </div>
        <div class="status-item">
            <div class="box busy">BUSY</div>
            <span>@tables.Count(t => t.IsOccupied)</span>
        </div>
        
        <div class="edit-controls">
            <label class="switch">
                <input type="checkbox" @bind="isEditMode">
                <span class="slider round"></span>
            </label>
            <span class="mode-label">@(isEditMode ? "Modo Edici√≥n" : "Modo Operativo")</span>
        </div>
    </div>

    <!-- Map Area -->
    <div class="tables-map-area">
        @if (isLoading)
        {
            <div class="loading">Cargando mesas...</div>
        }
        else
        {
            @foreach (var table in tables)
            {
                <div class="table-card @GetTableClass(table)" 
                     style="left: @(table.X)px; top: @(table.Y)px; cursor: @(isEditMode ? "move" : "pointer")"
                     @onmousedown="@(e => OnMouseDown(e, table))"
                     @onclick="@(e => OnTableClick(table))"
                     @onclick:stopPropagation="true">
                     
                    <div class="table-number">@table.TableNumber</div>
                    
                    @if (table.IsOccupied && table.ActiveOrder != null)
                    {
                        <div class="table-info">
                            <div class="time">@table.ActiveOrder.TimeElapsed</div>
                            <div class="customer">@table.ActiveOrder.CustomerName</div>
                            <div class="total">‚Ç¨@table.ActiveOrder.Total.ToString("F2")</div>
                        </div>
                    }
                </div>
            }
        }
    </div>
    
    <div class="actions-panel">
        <button class="btn-takeaway" @onclick="GoToTakeAway">
            üõçÔ∏è TAKE AWAY
        </button>
        <button class="btn-refresh" @onclick="LoadTables">
            üîÑ REFRESH
        </button>
    </div>
</div>

@if (showPinModal)
{
    <PinModal OnAuthenticated="OnPinSuccess" OnCancel="ClosePinModal" />
}

<style>
    .tables-layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #f5f5f5;
        padding: 20px;
        user-select: none; /* Prevent text selection while dragging */
    }

    .header-status {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        padding: 10px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        align-items: center;
    }

    /* ... Existing styles ... */
    
    .edit-controls {
        margin-left: auto;
        display: flex; align-items: center; gap: 10px;
    }
    
    /* Toggle Switch */
    .switch { position: relative; display: inline-block; width: 60px; height: 34px; }
    .switch input { opacity: 0; width: 0; height: 0; }
    .slider { position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: #ccc; transition: .4s; border-radius: 34px; }
    .slider:before { position: absolute; content: ""; height: 26px; width: 26px; left: 4px; bottom: 4px; background-color: white; transition: .4s; border-radius: 50%; }
    input:checked + .slider { background-color: #2196f3; }
    input:checked + .slider:before { transform: translateX(26px); }

    .tables-map-area {
        position: relative;
        flex-grow: 1;
        background: #e0e0e0; /* Floor color */
        border-radius: 8px;
        overflow: hidden;
        box-shadow: inset 0 0 20px rgba(0,0,0,0.1);
    }

    .table-card {
        position: absolute;
        width: 140px; height: 140px;
        border-radius: 50%;
        display: flex; flex-direction: column;
        align-items: center; justify-content: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        transition: transform 0.1s, box-shadow 0.2s;
        color: white; text-align: center; padding: 10px;
        z-index: 10;
    }
    .table-card:hover { z-index: 20; transform: scale(1.05); }
    .table-card.free { background-color: #d4a017; }
    .table-card.busy { background-color: #9c27b0; }
    
    .table-number { font-size: 2rem; font-weight: bold; position: absolute; top: 10px; left: 15px; opacity: 0.6; }
    
    .status-item { display: flex; align-items: center; gap: 10px; font-weight: bold; font-size: 1.2rem; }
    .box { padding: 10px 20px; color: white; font-weight: bold; border-radius: 4px; text-align: center; min-width: 80px; }
    .box.free { background-color: #d4a017; }
    .box.busy { background-color: #9c27b0; }
</style>

@code {
    private List<Table> tables = new();
    private bool isLoading = true;
    private bool isEditMode = false;
    
    // Dragging state
    private Table? draggingTable;
    private double startX, startY;
    private double initialTableX, initialTableY;

    // PIN Modal state
    private bool showPinModal = false;
    private Table? selectedTableForAction;

    protected override async Task OnInitializedAsync()
    {
        await LoadTables();
    }

    private async Task LoadTables()
    {
        isLoading = true;
        tables = await ApiService.GetTablesAsync();
        isLoading = false;
    }

    private string GetTableClass(Table t) => t.IsOccupied ? "busy" : "free";

    private void OnMouseDown(MouseEventArgs e, Table table)
    {
        if (!isEditMode) return;
        
        draggingTable = table;
        startX = e.ClientX;
        startY = e.ClientY;
        initialTableX = table.X;
        initialTableY = table.Y;
    }

    private void OnMouseMove(MouseEventArgs e)
    {
        if (draggingTable != null && isEditMode)
        {
            double dx = e.ClientX - startX;
            double dy = e.ClientY - startY;

            draggingTable.X = (int)(initialTableX + dx);
            draggingTable.Y = (int)(initialTableY + dy);
            
            // Boundary checks could be added here
        }
    }

    private async Task OnMouseUp(MouseEventArgs e)
    {
        if (draggingTable != null)
        {
            // Save position
            await ApiService.UpdateTablePositionAsync(draggingTable.Id, draggingTable.X, draggingTable.Y);
            draggingTable = null;
        }
    }
    
    private void OnTableClick(Table table)
    {
        if (isEditMode) return; // Don't click if editing
        
        // Open PIN Modal
        selectedTableForAction = table;
        showPinModal = true;
    }
    
    private void ClosePinModal()
    {
        showPinModal = false;
        selectedTableForAction = null;
    }

    private void OnPinSuccess(User user)
    {
        // Authenticated!
        // User 'user' is the one who logged in. 
        // We could pass this User ID to order creation if needed, or just allow access.
        // For now, allow access.
        
        showPinModal = false;
        
        if (selectedTableForAction != null)
        {
            NavigateToTable(selectedTableForAction);
        }
    }

    private void NavigateToTable(Table table)
    {
        if (!table.IsOccupied)
        {
            Navigation.NavigateTo($"/order/create?tableId={table.Id}");
        }
        else
        {
            if (table.ActiveOrder != null)
            {
                // Go to receipt/details
                Navigation.NavigateTo($"/print/receipt/{table.ActiveOrder.Id}");
            }
        }
    }

    private void GoToTakeAway()
    {
        Navigation.NavigateTo("/order/create");
    }
}
