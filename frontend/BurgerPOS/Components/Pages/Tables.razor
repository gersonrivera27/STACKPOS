        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 800;
        font-size: 1rem;
    }

    .status-value {
        font-size: 1.16rem;
        color: #2c3f52;
        min-width: 24px;
    }

    .box {
        padding: 8px 12px;
        color: white;
        font-weight: 800;
        border-radius: 10px;
        text-align: center;
        min-width: 76px;
        letter-spacing: 0.4px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        justify-content: center;
    }

    .box.free { background: linear-gradient(145deg, #d7a316, #bf8d0f); }
    .box.busy { background: linear-gradient(145deg, #8f3db4, #762f98); }
    .box.total { background: linear-gradient(145deg, #4a6277, #395064); }

    .mode-label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #5f7388;
    }

    .btn-circle {
        width: 38px;
        height: 38px;
        border-radius: 9px;
        border: 1px solid #d2deea;
        background: #f2f7fb;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.15s ease;
        color: #4e6780;
    }

    .btn-circle:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 12px rgba(32, 45, 57, 0.14);
    }

    @@media (max-width: 960px) {
        .tables-layout {
            padding: 10px;
        }

        .status-item.total {
            display: none;
        }

        .edit-controls {
            margin-left: 0;
            width: 100%;
        }

        .edit-controls .hint {
            display: none;
        }
    }
</style>

@code {
    private List<Table> tables = new();
    private bool isLoading = true;
    private bool isEditMode = false;
    private bool compactMode = true;
    
    // Dragging state
    private Table? draggingTable;
    private double startX, startY;
    private double initialTableX, initialTableY;

    // PIN Modal state
    private bool showPinModal = false;
    private Table? selectedTableForAction;

    protected override async Task OnInitializedAsync()
    {
        await LoadTables();
    }

    private async Task LoadTables()
    {
        isLoading = true;
        tables = await ApiService.GetTablesAsync();
        isLoading = false;
    }

    private string GetTableClass(Table t) => t.IsOccupied ? "busy" : "free";

    private int GetTableSize()
    {
        if (compactMode)
        {
            if (tables.Count >= 24) return 82;
            if (tables.Count >= 16) return 92;
            if (tables.Count >= 12) return 100;
            return 108;
        }

        if (tables.Count >= 20) return 102;
        if (tables.Count >= 12) return 112;
        return 124;
    }

    private void OnMouseDown(MouseEventArgs e, Table table)
    {
        if (!isEditMode) return;
        
        draggingTable = table;
        startX = e.ClientX;
        startY = e.ClientY;
        initialTableX = table.X;
        initialTableY = table.Y;
    }

    private void OnMouseMove(MouseEventArgs e)
    {
        if (draggingTable != null && isEditMode)
        {
            double dx = e.ClientX - startX;
            double dy = e.ClientY - startY;

            draggingTable.X = (int)(initialTableX + dx);
            draggingTable.Y = (int)(initialTableY + dy);
            
            // Boundary checks could be added here
        }
    }

    private async Task OnMouseUp(MouseEventArgs e)
    {
        if (draggingTable != null)
        {
            // Save position
            await ApiService.UpdateTablePositionAsync(draggingTable.Id, draggingTable.X, draggingTable.Y);
            draggingTable = null;
        }
    }
    
    private void OnTableClick(Table table)
    {
        if (isEditMode) return; // Don't click if editing
        
        // Open PIN Modal
        selectedTableForAction = table;
        showPinModal = true;
    }
    
    private void ClosePinModal()
    {
        showPinModal = false;
        selectedTableForAction = null;
    }

    private void OnPinSuccess(User user)
    {
        // Authenticated!
        // User 'user' is the one who logged in. 
        // We could pass this User ID to order creation if needed, or just allow access.
        // For now, allow access.
        
        showPinModal = false;
        
        if (selectedTableForAction != null)
        {
            NavigateToTable(selectedTableForAction);
        }
    }

    private void NavigateToTable(Table table)
    {
        if (!table.IsOccupied)
        {
            Navigation.NavigateTo($"/order/create?tableId={table.Id}");
        }
        else
        {
            // Ir a detalle de mesa con orden activa
            Navigation.NavigateTo($"/tables/{table.Id}");
        }
    }

    private void ToggleDensity()
    {
        compactMode = !compactMode;
    }

}
