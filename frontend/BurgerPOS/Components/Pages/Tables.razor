@page "/tables"
@using BurgerPOS.Models
@using BurgerPOS.Services
@using BurgerPOS.Components.Shared
@inject PosApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="tables-layout" @onmousemove="OnMouseMove" @onmouseup="OnMouseUp">
    <div class="header-status">
        <div class="status-item free">
            <div class="box free">
                <i class="bi bi-check2-circle"></i>
                <span>FREE</span>
            </div>
            <span class="status-value">@tables.Count(t => !t.IsOccupied)</span>
        </div>
        <div class="status-item busy">
            <div class="box busy">
                <i class="bi bi-clock-history"></i>
                <span>BUSY</span>
            </div>
            <span class="status-value">@tables.Count(t => t.IsOccupied)</span>
        </div>
        <div class="status-item total">
            <div class="box total">
                <i class="bi bi-grid-3x3-gap-fill"></i>
                <span>TOTAL</span>
            </div>
            <span class="status-value">@tables.Count</span>
        </div>
        
        <div class="edit-controls">
            <span class="hint">@((isEditMode ? "Arrastra para reubicar" : "Toca una mesa para abrir"))</span>
            <button class="btn-pill @(compactMode ? "active" : "")" @onclick="ToggleDensity" title="Alternar densidad">
                <i class="bi bi-layout-sidebar-inset-reverse"></i>
                @(compactMode ? "Compacto" : "Normal")
            </button>
            <label class="switch">
                <input type="checkbox" @bind="isEditMode">
                <span class="slider round"></span>
            </label>
            <span class="mode-label">@(isEditMode ? "Modo Edición" : "Modo Operativo")</span>
            <button class="btn-circle" title="Refrescar" @onclick="LoadTables">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
        </div>
    </div>

    <!-- Map Area -->
    <div class="tables-map-area">
        @if (isLoading)
        {
            <div class="loading">Cargando mesas...</div>
        }
        else
        {
            @foreach (var table in tables)
            {
                <div class="table-card @GetTableClass(table) @(compactMode ? "compact" : "normal") @(draggingTable?.Id == table.Id ? "dragging" : "")"
                     style="left: @(table.X)px; top: @(table.Y)px; cursor: @(isEditMode ? "move" : "pointer"); --table-size: @(GetTableSize())px;"
                     @onmousedown="@(e => OnMouseDown(e, table))"
                     @onclick="@(e => OnTableClick(table))"
                     @onclick:stopPropagation="true">
                     
                    <div class="table-number">@table.TableNumber</div>
                    
                    @if (table.IsOccupied && table.ActiveOrder != null)
                    {
                        <div class="table-info">
                            <div class="meta-row">
                                <div class="time">@table.ActiveOrder.TimeElapsed</div>
                                <div class="total">€@table.ActiveOrder.Total.ToString("F2")</div>
                            </div>
                            @if (!compactMode)
                            {
                                <div class="customer">@table.ActiveOrder.CustomerName</div>
                            }
                        </div>
                    }
                    else if (!compactMode)
                    {
                        <div class="table-empty">Libre</div>
                    }
                </div>
            }
        }
    </div>
    
</div>

@if (showPinModal)
{
    <PinModal OnAuthenticated="OnPinSuccess" OnCancel="ClosePinModal" />
}

<style>
